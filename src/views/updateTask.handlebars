<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">

      <div class="card card-body bg-dark p-4 text-white">
        <h1>Update Task</h1>
        <form action="/{{task._id}}/update" method="post">
          <label for="title">Task: </label>
          <input
            type="text"
            name="title"
            id="title"
            value="{{task.title}}"
            class="form-control bg-dark text-white"
          />
          <label for="description">Description: </label>
          <textarea
            name="description"
            id="description"
            class="form-control bg-dark text-white"
          >{{task.description}}</textarea>
          <input
            type="submit"
            value="Update"
            class="btn btn-primary btn-sm mt-2"
          />
        </form>
      </div>
    </div>
  </div>
</div>